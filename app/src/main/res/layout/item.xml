<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/column_width_1"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="姓名" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="@dimen/column_width_2"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="电话" />

    <TextView
        android:id="@+id/mode"
        android:layout_width="@dimen/column_width_1"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="模式" />

    <TextView
        android:id="@+id/targetTime"
        android:layout_width="@dimen/column_width_1"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="时间" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="@dimen/column_width_2"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="目的地" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/column_width_2"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/price"
        android:layout_width="@dimen/column_width_1"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="价格" />

    <TextView
        android:id="@+id/priceState"
        android:layout_width="@dimen/column_width_2"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="支付状态" />

    <TextView
        android:id="@+id/progress"
        android:layout_width="@dimen/column_width_2"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="状态" />

    <TextView
        android:id="@+id/additional"
        android:layout_width="@dimen/column_width_4"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:text="备注" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="@dimen/column_width_1"
        android:layout_height="@dimen/column_height"
        android:layout_gravity="center"
        android:text="编辑" />
</LinearLayout>