<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="姓名:" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/name"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="电话:" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/phone"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="模式:" />

            <Spinner
                android:id="@+id/mode"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="时间:" />

            <TimePicker
                android:id="@+id/targetTime"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="目的地:" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/destination"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="款式图:" />

            <ImageView
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="价格:" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/price"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="支付状态:" />

            <Spinner
                android:id="@+id/priceState"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="状态:" />

            <Spinner
                android:id="@+id/progress"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/column_width_2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="备注:" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/additional"
                android:layout_width="@dimen/column_width_4"
                android:layout_height="@dimen/column_height" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定" />
    </RelativeLayout>
</LinearLayout>